booktitle = {Columbia Law and Economics Working Paper No. 489},
doi = {http://dx.doi.org/10.2139/ssrn.2496518},
file = {:Users/leopoldingenohl/Library/Mobile Documents/com$\sim$apple$\sim$CloudDocs/Bachelorarbeit/Paper/SSRN-id2496518.pdf:pdf},
